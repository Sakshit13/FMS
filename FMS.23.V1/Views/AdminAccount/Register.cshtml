@model FMS._23.V1.ViewModels.AdminViewModel
@{
	ViewData["Title"] = "Register";
}
<form  asp-action="Register">
	<div class="form-group">
		<input type="text" asp-for="Email" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Enter Name">
	</div>
	<div class="form-group">
		<input type="email" asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
	</div>
	<div class="form-group">
		<input type="text" asp-for="PhoneNo" placeholder="Phone Num">
	</div>
	<div class="form-group">
		<select class="form-control form-control-lg" asp-for="RoleID" asp-items="Model.RoleList" id="exampleFormControlSelect2">
			<option value="">Select a role</option>
		</select>
	</div>
	
	<div class="form-group">
		<input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
	</div>
	
	<div class="mb-4">
		<div class="form-check">
			<label class="form-check-label text-muted">
				<input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
			</label>
		</div>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Create User</button>
	</div>
	<div class="text-center mt-4 font-weight-light">
		Already have an account? <a href="/Account/login" class="text-primary">Login</a>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

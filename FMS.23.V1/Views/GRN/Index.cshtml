@model IEnumerable<FMS._23.V1.Models.GrntransactionDetail>

@{
    ViewData["Title"] = "Index";
}

<h4><b>GRN Details</b></h4>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New GRN</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Grnnumber)</th>
                <th>@Html.DisplayNameFor(model => model.PartNumber)</th>
                <th>@Html.DisplayNameFor(model => model.RecievedQty)</th>
                <th>@Html.DisplayNameFor(model => model.AcceptedQty)</th>
                <th>@Html.DisplayNameFor(model => model.RejectedQty)</th>
                <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                <th>@Html.DisplayNameFor(model => model.Tax)</th>
                <th>@Html.DisplayNameFor(model => model.Discount)</th>
                <th>@Html.DisplayNameFor(model => model.Cgst)</th>
                <th>@Html.DisplayNameFor(model => model.Sgst)</th>
                <th>@Html.DisplayNameFor(model => model.Igst)</th>
                <th>@Html.DisplayNameFor(model => model.Tcs)</th>
                <th>@Html.DisplayNameFor(model => model.Cartage)</th>
                <th>@Html.DisplayNameFor(model => model.FreightAmount)</th>
                <th>@Html.DisplayNameFor(model => model.OpeningStock)</th>
                <th>@Html.DisplayNameFor(model => model.ClosingStock)</th>
                <th>@Html.DisplayNameFor(model => model.Active)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Grnnumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.PartNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.RecievedQty)</td>
                    <td>@Html.DisplayFor(modelItem => item.AcceptedQty)</td>
                    <td>@Html.DisplayFor(modelItem => item.RejectedQty)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tax)</td>
                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cgst)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sgst)</td>
                    <td>@Html.DisplayFor(modelItem => item.Igst)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tcs)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cartage)</td>
                    <td>@Html.DisplayFor(modelItem => item.FreightAmount)</td>
                    <td>@Html.DisplayFor(modelItem => item.OpeningStock)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClosingStock)</td>
                    <td>@Html.DisplayFor(modelItem => item.Active)</td>
                    <td style="width:130px">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Grntid" class="btn btn-primary mx-1">Edit</a>
                            <input type="submit" onclick="DeleteGRN(@item.Grntid)"  value="Delete" class="btn btn-danger" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function DeleteGRN(GRNID) {
        if (GRNID != null && confirm("Are you sure you want to delete this?")) {
            $.ajax({
                type: "GET",
                url: "/GRN/Delete?id=" + GRNID,
                success: function () {
                    window.location.href = "/GRN/Index";
                },
                error: function () {
                    alert("Error deleting item.");
                }
            });
        }
    }
</script>
